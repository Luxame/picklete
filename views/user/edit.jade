extends ../_layout_head

block body
    .container
      .m-top-6.m-bottom-10
        .row.m-bottom-4
          .col-md-6
            p.font-size-slarge.line-height-xlarge.m-bottom-4 會員帳號：#{user.email}
          // /col-md-6
          .col-md-6.desktop-text-right
            ul.list-inline
              li
                a.btn.btn-default.border-radius-circle(href='/member/favorite') 我的收藏
              li
                a.btn.btn-default.border-radius-circle(href='/member/purchase') 我的訂單記錄
              li
                a.btn.btn-default.border-radius-circle.active(href='/member/setting') 修改會員資料
          // /col-md-6
        // /row
        .row
          form.col-md-8.col-md-offset-2(action='/member/update', method='post')
            h5.text-green.m-bottom-6 ※ 部分資料以 * 或隱藏處理，保護您的個人隱私
            include ./_form
            .row
              .col-sm-4.col-sm-offset-4
                button.btn.btn-black.border-radius-circle.btn-block(type='submit') 確認修改
            
block js
  script(src="/javascripts/jquery.twzipcode.min.js")  
  script(src="/javascripts/user/edit.js") 
  script.
    $('#twzipcode').twzipcode({
    // 'zipcodeIntoDistrict': true,
    'countyName'   : 'city',
    'districtName' : 'region',
    'zipcodeName'  : 'zipcode',
    'zipcodeSel'  : '#{user.zipcode}',
    'css': [
      'form-control width-auto inline-block',
      'form-control width-auto inline-block',
      'form-control width-auto inline-block']
    }); 
    
    $("select[name='city']").prop('required',true);
    $("select[name='region']").prop('required',true);
    $("select[name='zipcode']").prop('required',true);
